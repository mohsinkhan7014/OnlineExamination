<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/t_change_password_old_password"
        android:password="true" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:hint="Old Password" />

    <EditText android:id="@+id/t_change_password_new_password"
        android:password="true" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:hint="New Password" />

    <EditText android:id="@+id/t_change_password_re_new_password"
        android:password="true" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:hint="Confirm Password" />

    <Button android:id="@+id/ok_change_password_button"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="OK" />

</LinearLayout>
